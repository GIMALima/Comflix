<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".DetailsActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/retour_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top|start"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            android:background="@color/colorPrimary"
            android:gravity="top|center_horizontal"
            app:theme="@style/ToolbarColoredBackArrow"
            app:titleMarginTop="15dp"
            app:titleTextColor="@color/text" />


    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        tools:layout_editor_absoluteY="30dp">
        android:layout_marginBottom="?attr/actionBarSize"
        android:fitsSystemWindows="true">
    </FrameLayout>
</RelativeLayout>
    <LinearLayout
        android:id="@+id/comments_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false"
        app:behavior_peekHeight="?attr/actionBarSize"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:background="#fff"

        android:elevation="@dimen/design_bottom_sheet_modal_elevation">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_gravity="top">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumbup"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/add_favourite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true" />
        </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="95281 comments "
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_margin="10dp"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>